<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ItemFragment">

    <ImageView
        android:id="@+id/GamesLogos"
        android:layout_width="155dp"
        android:layout_height="155dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/black" />

    <TextView
        android:id="@+id/GameTitle"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/GamesLogos"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="titulo" />

    <TextView
        android:id="@+id/GamesRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@id/GamesLogos"
        app:layout_constraintTop_toBottomOf="@+id/GameTitle"
        tools:text="10/10" />

    <TextView
        android:id="@+id/GamesDescription"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_marginStart="28dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/GamesRating"
        app:layout_constraintVertical_bias="1.0"
        tools:text="jdjjdjdjdjdjjdjjdjdjdjjdjjdjdjjdjdjdjjdjdjdjj" />


</androidx.constraintlayout.widget.ConstraintLayout>